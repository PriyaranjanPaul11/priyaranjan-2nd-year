#include<bits/stdc++.h>
#include <iostream>
using namespace std;

int main() {
    float total_salary;
    int basic_salary;
    char grade;

    cout << "Enter basic salary: ";
    cin >> basic_salary;
    cout << "Enter grade: ";
    cin >> grade;
    float hra = basic_salary * 0.2;
    float da = basic_salary * 0.5;
    float allow;
    if (grade == 'A') {
        allow = 1700;
    }
    else if (grade == 'B') {
        allow = 1500;
    }
    else
    {
        allow <= 1300;
    }
     float pf = basic_salary * 0.11;
    total_salary = basic_salary + hra + da + allow - pf;
    cout << "Total salary: " <<(int)round (total_salary )<< endl;

    return 0;
}
