#include <stdio.h>

int main(void) {
  int a, b, choice;
  printf("Enter two integers: ");
  scanf("%d %d", &a, &b);
  printf("Enter your choice (1-4): ");
  scanf("%d", &choice);

  if (choice == 1) {
    printf("%d + %d = %d\n", a, b, a + b);
  } else if (choice == 2) {
    printf("%d - %d = %d\n", a, b, a - b);
  } else if (choice == 3) {
    printf("%d * %d = %d\n", a, b, a * b);
  } else if (choice == 4) {
    printf("%d / %d = %d\n", a, b, a / b);
  } else {
    printf("Invalid choice.\n");
  }
  return 0;
}
