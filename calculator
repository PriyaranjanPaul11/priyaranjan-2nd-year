#include <iostream>
using namespace std;

int main() {
    
    float num1,num2,result;
    char oper;
    
    cout<<"Enter the first number:"<<endl;
    cin>>num1;
    
    cout<<"Enter the second number:"<<endl;
    cin>>num2;
    
    cout<<"Enter the operation to be performed(+,-,/,*)"<<endl;
    cin>>oper;
    
    switch(oper){
    case '+':
        result=num1+num2;
        cout<<"Result:"<<num1<<" "<<oper<<" "<<num2<<"="<<result;
        break;
        
       case '-':
        result=num1-num2;
        cout<<"Result:"<<num1<<" "<<oper<<" "<<num2<<"="<<result;
        break;
        
    case '/':
        result=num1/num2;
        cout<<"Result:"<<num1<<" "<<oper<<" "<<num2<<"="<<result;
        break;
        
    case '*':
        result=num1*num2;
        cout<<"Result:"<<num1<<" "<<oper<<" "<<num2<<"="<<result;
        break;
    }
    

    return 0;
}
